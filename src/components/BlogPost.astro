---
import AuthorList from "./AuthorList.astro";

export interface Props {
  title: string;
  authors: [
    { name: string; email: string } | [{ name: string; email: string }]
  ];
  publishDate: string;
  heroImage: string;
  alt: string;
}

const { title, authors, publishDate, heroImage, alt } = Astro.props;
---

<div class="layout">
  <article class="content">
    <div>
      <header>
        {heroImage && (
          <img
            width="720"
            height="420"
            class="hero-image"
            loading="lazy"
            src={heroImage}
            alt={alt}
          />
        )}
        <p class="publish-date">{publishDate}</p>
        <h1 class="title">{title}</h1>
        <AuthorList {authors} />
      </header>
      <main>
        <slot />
      </main>
    </div>
  </article>
</div>

<style>
  .hero-image {
    width: 100vw;
    object-fit: cover;
    object-position: center;
    margin-top: 2rem;
    margin-bottom: 4rem;
    max-width: 1280px;
  }

  @media (max-width: 50em) {
    .hero-image {
      height: 260px;
      margin-top: 0;
      margin-bottom: 2rem;
    }
  }

  .content {
    margin-bottom: 8rem;
    max-width: 70ch;
  }

  .content :global(main > * + *) {
    margin-top: 1.25rem;
  }

  .content :global(h2) {
    margin-top: 3rem;
    font-weight: bold;
    font-size: 1.5rem;
  }

  .content :global(h3) {
    margin-top: 2rem;
    margin-bottom: -0.5rem;
    font-weight: bold;
    font-size: 1.25rem;
  }

  .content :global(table) {
    font-family: var(--font-sans);
    background: white;
    border-collapse: collapse;
  }

  .content :global(td),
  .content :global(th) {
    border: solid thin var(--color-gray-300);
    padding: 3px 6px;
  }

  .content :global(p),
  .content :global(li) {
    text-align: justify;
    -webkit-hyphens: auto;
    -webkit-hyphenate-limit-before: 4;
    -webkit-hyphenate-limit-after: 4;
    -webkit-hyphenate-limit-chars: 10 4 4;
    -webkit-hyphenate-limit-lines: 1;
    -webkit-hyphenate-limit-last: always;
    -webkit-hyphenate-limit-zone: 10%;
    -moz-hyphens: auto;
    -moz-hyphenate-limit-chars: 10 4 4;
    -moz-hyphenate-limit-lines: 1;
    -moz-hyphenate-limit-last: always;
    -moz-hyphenate-limit-zone: 10%;
    -ms-hyphens: auto;
    -ms-hyphenate-limit-chars: 10 4 4;
    -ms-hyphenate-limit-lines: 1;
    -ms-hyphenate-limit-last: always;
    -ms-hyphenate-limit-zone: 10%;
    hyphens: auto;
    hyphenate-limit-chars: 10 4 4;
    hyphenate-limit-lines: 1;
    hyphenate-limit-last: always;
    hyphenate-limit-zone: 10%;
  }

  header {
    display: flex;
    flex-direction: column;

    padding-bottom: 2rem;
    margin-bottom: 2rem;
  }

  .title,
  .author,
  .publish-date {
    margin: 0;
  }

  .publish-date,
  .author {
    color: var(--theme-text-lighter);
  }

  .title {
    font-size: 2.25rem;
    font-weight: 600;
  }
</style>
