---
import BaseHead from "../components/BaseHead.astro";
import BlogHeader from "../components/BlogHeader.astro";
import BlogPost from "../components/BlogPost.astro";

const { content } = Astro.props;
const { title, description, publishDate, authors, alt, previewImage, url } =
  content;
---

<html lang={content.lang || "en"}>
  <head>
    <BaseHead {title} {description} {url} {previewImage} />
  </head>

  <body>
    <BlogHeader />
    <div class="wrapper">
      <BlogPost {title} {authors} {publishDate} {alt}>
        <slot />
      </BlogPost>
    </div>
  </body>
</html>
